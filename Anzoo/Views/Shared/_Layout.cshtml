@using Microsoft.AspNetCore.Identity
@inject SignInManager<Anzoo.Models.User> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Anzoo</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-teal shadow-sm px-4">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <!-- Logo (cu distanță mai mare față de marginea stângă) -->
                <a class="navbar-brand logo-spacing"
                   asp-controller="Home" asp-action="Index">
                    Anzoo
                </a>

                <!-- Toggler pentru mobil -->
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Meniu navigație -->
                <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
                    <ul class="navbar-nav align-items-lg-center me-3">
                        <!-- decalaj față de marginea dreaptă -->
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link ms-lg-3" asp-controller="Ad" asp-action="MyAds">
                                    Anunțurile mele
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link ms-lg-3" asp-controller="Account" asp-action="Profile">
                                    Profilul meu
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link ms-lg-3" asp-controller="Account" asp-action="Logout">
                                    Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link ms-lg-3" asp-controller="Account" asp-action="Login">
                                    Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link ms-lg-3" asp-controller="Account" asp-action="Register">
                                    Register
                                </a>
                            </li>
                        }

                        <li class="nav-item ms-lg-3">
                            <a class="btn btn-add rounded-pill px-4 fw-semibold"
                               asp-controller="Ad" asp-action="Create">
                                Adaugă anunţ nou
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-teal text-light text-center py-3 mt-auto">
        &copy; 2024 - Anzoo - <a class="text-light" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
