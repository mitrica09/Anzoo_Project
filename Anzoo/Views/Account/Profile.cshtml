@model Anzoo.ViewModels.Account.ProfileViewModel

@{
    ViewData["Title"] = "Profilul meu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="profile-header">
        <div class="profile-avatar">@Model.FullName?[0]</div>
        <h1>Profilul meu</h1>
        <p>Poți actualiza informațiile contului tău de aici</p>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }

    <div class="profile-section">
        <h2 class="section-title">Date personale</h2>
        <form asp-action="Profile" method="post">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-profile-buttons">
                <button type="submit" class="btn-profile">Salvează</button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/Account/Profile.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
